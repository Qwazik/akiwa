							h2 Что мы предлагаем
							.job-offer.clearfix
								.row
									.col-lg-4.col-sm-6.job-offer__column
										.job-offer__item
											.job-offer__image
												img(src="img/job-offer-1.png", alt="Карьерный рост")
											span.job-offer__name Карьерный рост
											span.job-offer__desc Средний срок перехода на следующую  карьерную ступень – 1 год
									.col-lg-4.col-sm-6.job-offer__column
